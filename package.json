{
  "name": "transcription-buddy",
  "version": "1.0.0",
  "description": "Transcription buddy is an interactive transcript editor.",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "serve": "browser-sync start --server --files 'dist/css/*.css, **/*.html, **/*.js'",
    "watch:css": "onchange 'src/scss' -- npm run scss",
    "start": "run-p serve watch:css",
    "dev": "node index"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samFredLumley/transcription-buddy.git"
  },
  "author": "sam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samFredLumley/transcription-buddy/issues"
  },
  "homepage": "https://github.com/samFredLumley/transcription-buddy#readme",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "bulma": "^0.8.0",
    "bulma-switch": "^2.0.0",
    "connect-browser-sync": "^2.1.0",
    "node-sass": "^4.13.1",
    "node-sass-middleware": "^0.11.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0"
  },
  "dependencies": {
    "amplitudejs": "^5.0.3",
    "express": "^4.17.1",
    "green-audio-player": "^1.0.11",
    "http-server": "^0.12.1",
    "python-shell": "^1.0.8"
  }
}
